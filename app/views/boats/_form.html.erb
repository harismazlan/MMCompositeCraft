<%= form_with url: boats_path, local: true, scope: :boat do |form| %>
  

  <div class="field">
    <%= form.label :make %>
    <%= form.text_field :make %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <div class="field">
    <%= form.label :condition %>
    <%= form.text_field :condition %>
  </div>

  <div class="field">
    <%= form.label :price, 'Price (RM)' %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :make_type %>
    <%= form.text_field :make_type %>
  </div>

  <div class="field">
    <%= form.label :boat_class %>
    <%= form.text_field :boat_class %>
  </div>

  <div class="field">
    <%= form.label :length, 'Length(ft)' %>
    <%= form.number_field :length %> 
  </div>

  <div class="field">
    <%= form.label :fuel_type %>
    <%= form.text_field :fuel_type %>
  </div>

  <div class="field">
    <%= form.label :hull_material %>
    <%= form.text_field :hull_material %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
